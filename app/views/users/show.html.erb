<% provide(:title, @user.name) %>

<div class="row">
  <side class="text-center col-md-2">
    <div class="grav">
      <%= gravatar_for @user %>
    </div>
    <ul>
      <li><%= @user.name %></li>
      <li><%= @user.email %></li>
    </ul>
  </side>
  
  <div class="col-md-10">
    <%= sum_for @user %>
  </div>

</div>