<% provide(:title, @user.name) %>

<div class="row">
  <side class="col-xs-3 text-center col-md-2">
    <div>
      <%= gravatar_for @user %>
    </div>
    <ul>
      <li><%= @user.name %></li>
      <li><%= @user.email %></li>
    </ul>
  </side>
  
  <div class="col-xs-9 col-md-10">
    <%= @user.point_ids %>
    <%= sum_for @user %>
  </div>

</div>