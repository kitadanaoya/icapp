<% provide(:title, "Login") %>
  <h1 class="text-center">Log In</h1>
  
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
     <div>
      <%= form_for(:session, url: login_path) do |f| %>
     
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
    
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
    
        <%= f.submit "Log in", class: "btn btn-block btn-primary" %>
     <% end %>
     </div>
     
     <div style="margin-top: 10%" class="text-center col-md-offset-3 col-md-6">
       <p>新規登録の方はコチラ</p>
       <%= link_to "Sign Up", signup_path, class: "btn btn-info btn-block" %>
     </div>
     
    </div>
  </div>